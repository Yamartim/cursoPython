{% extends "template.html.j2" %} 
{% block conteudo %}
{# dizendo para o flask que esse arquivo ocupa o espaço declarado no template #}

    <table class="table table-striped table-responsive table-bordered">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Categoria</th>
                <th>Console</th>
            </tr>
        </thead>

        {# comentarios são escritos assim #}
        {# expressões entre {%%} sao codigo python, no caso o for faz varuas linhas na tabela #}
        {# expressões ente {{}} são substiuidas por variaveis #}

        <tbody>
        {% for jogo in jogos %}    
            <tr>
                <td>{{ jogo.nome }}</td>
                <td>{{ jogo.categoria }}</td>
                <td>{{ jogo.console }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    
{% endblock %}